include ../blanks/input-header/input-header
mixin date-dropdown(opt)
  +b.input(class="_150")
    +input-header({left_heading:opt.left_heading})
    +e.body()
      +e.INPUT.field.datepicker(type="text", placeholder = "ДД.ММ.ГГГГ")
      +e.button(tabindex="-1")
        +e.BUTTON.button-icon(type!=opt.button-type,tabindex='-1')
        
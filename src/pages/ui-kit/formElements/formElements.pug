    +expandable-checkbox({class: "_type_ecb _266 _expanded", inner_text: "expandable checkbox list",input_type: "checkbox", items: {"Завтрак":false,"Письменный стол":true, "Стул для кормления":true,"Кроватка": true,"Телевизор":false,"Шампунь":false}})
    +advantage-item({icon: "insert_emoticon", title: "Комфорт", text: "Шумопоглощающие стены"})
    +advantage-item({icon: "location_city", title: "Удобство", text: "Окно в каждой из спален"})
  +e.col
    +checkbox-buttons({class: "_type_cbb _222",inner_text: "checkbox buttons",input_type: "checkbox", items: {"Можно курить":false,"Можно с питомцами":true, "Можно пригласить гостей (до 10 человек)":true}})
    +radio-buttons({class: "_type_rb",inner_text: "radio buttons",input_type: "radio", items: {"Мужчина":true,"Женщина":false}})
    +toggle({class: "_type_tog _266",input_type: "checkbox", inner_text: "toggle", items: {"Получать спецпредложения":true,"Получать cпецпредложения":false}})
    +like-button({class: "_type_lkb _266",input_type: "checkbox", inner_text: "like button", items: {2:false}})
    
    +dropdown({class: "_320", left_heading:"dropdown", inner_text: "Сколько гостей", items: {"Взрослые":0,"Дети":0, "Младенцы":0}})
    +masked-text-field({left_heading:"masked text field",placeholder: "ДД.ММ.ГГГГ"}) 
    +e.wrapper._320 
      +date-dropdown({left_heading:"date dropdown", inner_text: "ДД.ММ.ГГГГ", width: "150"})
      +date-dropdown({left_heading:"date dropdown", inner_text: "ДД.ММ.ГГГГ", width: "150",initial_value: "19.08.2019"})
    +date-dropdown({left_heading:"filter date dropdown", inner_text: "ДД МММ - ДД МММ", class: "range", width: "266",initial_value: "19 авг - 23 авг"})
    +subscription-text-field({left_heading:"subscription text field",placeholder: "Email", width: "266"})
    +dropdown({class: "_266", left_heading:"dropdown", right_heading: "default",inner_text: "Конфигурация номера", items: {"Спальни":2,"Кровати":2, "Ванные комнаты":0}})
